            <div><%= link_to "English", { :lang=>'en' }, class: "ml-2" %>
          <%end%>
        </ul>
          <a class="nav-link">
            <% if signed_in? %>
              <%= link_to current_user.email, edit_user_registration_path, class: "ml-3" %>
