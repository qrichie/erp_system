      <ul class="nav flex-column ml-2">
        <li class="nav-item">
          <a class="nav-link active" href="#">
            
          </a>
        </li>
        <li class="nav-item mt-2">
          <a class="nav-link">
            <%= link_to "Homepage", root_path, class: "btn btn-secondary" %>
          </a>
        </li>
        <% if user_signed_in? %>
          <% if !current_user.is_customer %>
            <li class="nav-item">
              <a class="nav-link">
                <%= link_to t("orders"), orders_path, class: "btn btn-secondary" %>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link">
                <%= link_to t("customers"), customers_path, class: "btn btn-secondary" %>
