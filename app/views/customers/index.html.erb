<div class="container">
  <h1><%= t("customers") %></h1>
  <% @customers.each do |customer| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= link_to "#{t("customer_id")} #{ customer.id } ", customer_path(customer) %></h5>
        <p class="card-text"><%= t("user_name") %>: <%= customer.user.first_name + ' '+ customer.user.last_name %></p>
        <p class="card-text"><%= t("address") %>: <%= customer.user.address %></p>
      </div>
    </div>
  <% end %>
</div>
